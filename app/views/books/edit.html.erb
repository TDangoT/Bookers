<h1>Editing Book</h1>

<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>

<% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">

    <h2><%= @book.errors.count %> errors prohibited this book from beimg saved:</h2>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

    </div>
<% end %>

<div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit "Update Book" %>
</div>
<% end %>

<p> <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
